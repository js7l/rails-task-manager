
<div class = "container col-4">
  <h2>Edit Task</h2>
  <%= simple_form_for @task do |f| %>
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.input :completed %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  <br>
  <br>
  <%= link_to "Back to Tasks", tasks_path %>
</div>
